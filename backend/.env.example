# Environment variables for receipt backend
NODE_ENV=development
PORT=3001

# Google Cloud Storage
GOOGLE_CLOUD_BUCKET_NAME=kleanly-receipts
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccount.json

# Firebase
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-service-account-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key

# App Settings
APP_NAME=Kleanly
APP_URL=https://kleanly.app
COMPANY_NAME=Kleanly Laundry Services
COMPANY_ADDRESS=123 Main St, City, State 12345
COMPANY_PHONE=+1 (555) 123-4567
COMPANY_EMAIL=info@kleanly.app
COMPANY_WEBSITE=www.kleanly.app

# Tax Settings
TAX_RATE=0.08
TAX_NUMBER=123456789
GST_NUMBER=GST123456789

# Receipt Settings
RECEIPT_EXPIRY_DAYS=365
LOGO_PATH=./public/logo.png
